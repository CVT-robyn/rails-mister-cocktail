<h2><%= @cocktail.name %></h2>

<br>
<ul class="list-group">
  <% @cocktail.doses.each do |dose| %>
    <li class="list-group-item"> <strong>Ingredient</strong> : <%= dose.ingredient.name %>, <strong>Dose</strong> : <%= dose.description %> <%= link_to "Remove", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %> </li>
  <% end %>
</ul>

<br>
<%= link_to "Add a new dose", new_cocktail_dose_path(@cocktail) %>
<br>
<%= link_to "Back to index", cocktails_path %>

